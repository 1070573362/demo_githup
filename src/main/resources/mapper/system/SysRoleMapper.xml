<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cxwmpt.demo.dao.system.SysRoleMapper">
  <resultMap id="BaseResultMap" type="com.cxwmpt.demo.model.system.SysRole">
    <!--@Table sys_role-->
    <id column="id" jdbcType="VARCHAR" property="id" />
    <result column="role_name" jdbcType="VARCHAR" property="roleName" />
    <result column="status" jdbcType="VARCHAR" property="status" />
    <result column="remark" jdbcType="VARCHAR" property="remark" />
    <result column="createId" jdbcType="VARCHAR" property="createId" />
    <result column="createDate" jdbcType="TIMESTAMP" property="createDate" />
    <result column="updateId" jdbcType="VARCHAR" property="updateId" />
    <result column="updateDate" jdbcType="TIMESTAMP" property="updateDate" />
  </resultMap>
  <sql id="Base_Column_List">
    id, role_name, status_value as `status`, remark, createId, createDate, updateId, updateDate
  </sql>
    <select id="AllList" resultMap="BaseResultMap">
      SELECT
      <include refid="Base_Column_List"/>
      FROM sys_role
      LEFT JOIN (SELECT dict.dict_code,dict.dict_value as status_value FROM dict where  dict.dict_type='status')dict1 on dict1.dict_code=sys_role.status
      <where>
      1=1 and delFlag=false
      <if test='map.roleName!=""&amp;&amp; map.roleName!=null'>
        and role_name like concat ('%' , #{map.roleName} , '%')
      </if>
      <if test='map.remark!=""&amp;&amp; map.remark!=null'>
        and remark like concat ('%' , #{map.remark} , '%')
      </if>
    </where>
    </select>
</mapper>